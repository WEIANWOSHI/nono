<UserControl x:Class="学员管理系统_ADO.NET_.view.FrmWebBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:学员管理系统_ADO.NET_.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="White">
            <TextBox FontSize="20" FontFamily="仿宋" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Cyan">英莱特官网</TextBox>
            <Button x:Name="btn_close" Click="btn_close_Click" Width="100" HorizontalAlignment="Right">
                <DockPanel>
                    <Image Source="/img/ico/guan.ico" Height="15"></Image>
                    <Label Content="关闭窗口"></Label>
                </DockPanel>
            </Button>
        </Grid>
        <WebBrowser Grid.Row="1" Source="http://www.yltedu.com" />   
    </Grid>
</UserControl>
